# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/zerotrust_db

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ML Model
ML_MODEL_PATH=app/ml/model.pkl
ML_THRESHOLD=0.5

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=alerts@zerotrust.local

# Redis (optional)
REDIS_URL=redis://localhost:6379
